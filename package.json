{
  "name": "auction",
  "version": "1.0.0",
  "scripts": {
    "client:start": "cd client && react-scripts start",
    "client:build": "cd client && react-scripts build",
    "client:test": "cd client && react-scripts test --verbose=false",
    "watch": "npm-watch",
    "prestart": "npm run client:build",
    "start": "NODE_ENV=production node app.js",
    "test": "mocha test/**/*.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "lowdb": "^1.0.0",
    "npm-watch": "^0.5.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-countdown-now": "^1.3.0",
    "react-dom": "^16.6.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.1",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "mocha": "^5.2.0",
    "react-test-renderer": "^16.6.3",
    "sinon": "^7.1.1",
    "supertest": "^3.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "watch": {
    "client:start": "client/src"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js"
  }
}
